<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="android:background">@color/indigo</item>-->
    </style>

    <style name="textStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name ="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="textFieldStyle" parent="textStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="textFieldLoginStyle" parent="textStyle">
        <item name ="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:radius">10dp</item>
    </style>
    <style name="twoButtonStyle" parent="textStyle">
        <item name = "android:layout_weight">0.5</item>
    </style>

    <style name="centerStyle" parent="textFieldStyle">
        <!--<item name ="android:layout_centerVertical">true</item> -->
        <item name ="android:layout_centerHorizontal">true</item>
    </style>
</resources>
